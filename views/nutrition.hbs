<div class="container mb-4">
  <div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
    <div class="container-fluid d-flex justify-content-center">
      <section class="performance-facts " id="box">
  <header class="performance-facts__header text-warning">
      {{#each data}}
    <h1 class="performance-facts__title">Nutrition Facts</h1>
    <p>Meal Name</p>
    <p><strong>{{this.foodName}}</strong></p>
  </header>
  <table class="performance-facts__table text-light">
    <thead>
      <tr>
        <th colspan="3" class="small-info">
          Amount Per Serving
        </th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th colspan="2">
          <b>Calories</b>
          {{this.calories}}
        </th>
      </tr>

      <tr>
        <th colspan="2">
          <b>Total Fat</b>
          {{this.fat}}
        </th>
      </tr>
     
      <tr>
        <th colspan="2">
          <b>Total Carbohydrate</b>
          {{this.carb}}
        </th>
      </tr>
    
      <tr class="thick-end">
        <th colspan="2">
          <b>Protein</b>
          {{this.protien}}
        </th>
        <td>
        </td>
      </tr>
    </tbody>
  </table>
  
  <p class="small-info text-center text-light font-weight-bold">
    Fat {{this.fat}}
    &bull;
    Carbohydrate {{this.carb}}
    &bull;
    Protein {{this.protien}}
  </p>
  {{/each}}
  
</section>
 
